
Day 2  - check the numbers

#include <Keypad.h>



const byte ROWS = 4;

const byte COLS= 3;

char keys[ROWS][COLS] = 

 {{ '1', '2', '3'},

   { '4', '5', '6'},

   { '7', '8', '9'},

   { '*', '0', '#'}};

byte rowPins[ROWS] = {5,6,7,8};

byte colPins[COLS] = {2,3,4};

Keypad keypad = Keypad( makeKeymap(keys), rowPins, colPins, ROWS, COLS );



void setup()

{

    Serial.begin(9600);

}

 int counter = 0;

 char guess[4];

 char correct[4] ={'3','8','6','1'};

 void loop()

{

   char key = keypad.getKey();

    if (key != NO_KEY)

    {

      if(key == '#'){

        if(correct[0] == guess[0] && correct[1] == guess[1] && correct[2] == guess[2] && correct[3] == guess[3]){

          Serial.print("Congratz you did it."); 

       }

        counter=0;

      }

      else{

      guess[counter] = key;


      counter++;

      Serial.print(key);

      }

    }


}







DAY 1 

#include <Keypad.h>



const byte ROWS = 4;

const byte COLS= 3;

char keys[ROWS][COLS] = 

 {{ '1', '2', '3'},

   { '4', '5', '6'},

   { '7', '8', '9'},

   { '*', '0', '#'}};

byte rowPins[ROWS] = {5,6,7,8};

byte colPins[COLS] = {2,3,4};

Keypad keypad = Keypad( makeKeymap(keys), rowPins, colPins, ROWS, COLS );



void setup()

{

    Serial.begin(9600);

}

 int counter = 0;

 char guess[4];

 char correct[4] ={'3','8','6','1'};

 void loop()

{

   char key = keypad.getKey();

    if (key != NO_KEY)

    {

      if(key == '#'){

        for(int i = 0; i < 4; i++){

         Serial.print(guess[i]); 

       }

        counter=0;

      }

      else{

      guess[counter] = key;


      counter++;

      Serial.print(key);

      }

    }

}
