
#include <IRremote.h>
int recieverpin = 11;
int red = 6;
int green = 5;
int blue = 9;
int brightness = 0;
int which;
int power = 0;
int switch1 = 0;
#define DATA 9
#define LATCH 8
#define CLOCK 10
#define DATA2 6
#define LATCH2 4
#define CLOCK2 5
int count;

IRrecv irrecv(recieverpin);

decode_results results;

void setup(){
    irrecv.enableIRIn();
    pinMode(red,OUTPUT);
    pinMode(green,OUTPUT);
    pinMode(blue,OUTPUT); 
    pinMode(LATCH,OUTPUT);
    pinMode(CLOCK,OUTPUT);
    pinMode(DATA, OUTPUT);
    pinMode(LATCH2,OUTPUT);
    pinMode(CLOCK2,OUTPUT);
    pinMode(DATA2, OUTPUT);
    Serial.begin(9600);


}

void updateShiftRegister(int number)

{

digitalWrite(LATCH, LOW);
shiftOut(DATA,CLOCK, LSBFIRST, number);
digitalWrite(LATCH, HIGH);

}

void updateShiftRegister2(int number)

{

digitalWrite(LATCH2, LOW);
shiftOut(DATA2,CLOCK2, LSBFIRST, number);
digitalWrite(LATCH2, HIGH);

}

 

void loop(){
  count = 1;
  if(irrecv.decode(&results)){ 
    switch(results.value){
      /////////////////////////////////1 BUTTON//////////////
      case 0x010:
      if(count%2 == 1){
    analogWrite(red,0);
    analogWrite(green,150+brightness);
    analogWrite(blue,150+brightness);
    delay(500);
      }
    if(count%2 == 0){
    analogWrite(red,0);
    analogWrite(green,150+brightness);
    analogWrite(blue,150+brightness);
    delay(500);
    }
count++;
      break;
      
     
    ////////////////////2 BUTTON/////////////////////
      case 0x810:
          if(count%2 == 1){
    analogWrite(red,0);
    analogWrite(green,150+brightness);
    analogWrite(blue,150+brightness);
    delay(500);
          }
    if(count%2 == 0){
    analogWrite(red,0);
    analogWrite(green,150+brightness);
    analogWrite(blue,150+brightness);
    delay(500);
    }
count++;
      break;

    ///////////////////////////////////////3 BUTTON/////////////////////
      case 0x410:
          if(count%2 == 1){
    analogWrite(red,0);
    analogWrite(green,150+brightness);
    analogWrite(blue,150+brightness);
    delay(500);
          }
    if(count%2 == 0){
    analogWrite(red,0);
    analogWrite(green,150+brightness);
    analogWrite(blue,150+brightness);
    delay(500);
    }
count++;
     break; 

    ///////////////////////////////////////4 BUTTON/////////////////////
      case 0xC10:
          if(count%2 == 1){
    analogWrite(red,0);
    analogWrite(green,150+brightness);
    analogWrite(blue,150+brightness);
    delay(500);
          }
    if(count%2 == 0){
    analogWrite(red,0);
    analogWrite(green,150+brightness);
    analogWrite(blue,150+brightness);
    delay(500);
    }
count++;
     break;
     ///////////////////////////////////////5 BUTTON/////////////////////
      case 0x210:
          if(count%2 == 1){
    analogWrite(red,0);
    analogWrite(green,150+brightness);
    analogWrite(blue,150+brightness);
    delay(500);
          }
    if(count%2 == 0){
    analogWrite(red,0);
    analogWrite(green,150+brightness);
    analogWrite(blue,150+brightness);
    delay(500);
    }
count++;
    
     break;
     ///////////////////////////////////////6 BUTTON/////////////////////
      case 0xA10:
          if(count%2 == 1){
    analogWrite(red,0);
    analogWrite(green,150+brightness);
    analogWrite(blue,150+brightness);
    delay(500);
          }
    if(count%2 == 0){
    analogWrite(red,0);
    analogWrite(green,150+brightness);
    analogWrite(blue,150+brightness);
    delay(500);
    }
count++;
     break;
    ///////////////////////////////////////7 BUTTON/////////////////////
      case 0x610:
          if(count%2 == 1){
    analogWrite(red,0);
    analogWrite(green,150+brightness);
    analogWrite(blue,150+brightness);
    delay(500);
          }
    if(count%2 == 0){
    analogWrite(red,0);
    analogWrite(green,150+brightness);
    analogWrite(blue,150+brightness);
    delay(500);
    }
count++;
     break;
     ///////////////////////////////////////8 BUTTON/////////////////////
      case 0xE10:
          if(count%2 == 1){
    analogWrite(red,0);
    analogWrite(green,150+brightness);
    analogWrite(blue,150+brightness);
    delay(500);
          }
    if(count%2 == 0){
    analogWrite(red,0);
    analogWrite(green,150+brightness);
    analogWrite(blue,150+brightness);
    delay(500);
    }
count++;
     break;
     ///////////////////////////////////////9 BUTTON/////////////////////
      case 0x110:      
          if(count%2 == 1){
    analogWrite(red,0);
    analogWrite(green,150+brightness);
    analogWrite(blue,150+brightness);
    delay(500);
          }
    if(count%2 == 0){
    analogWrite(red,0);
    analogWrite(green,150+brightness);
    analogWrite(blue,150+brightness);
    delay(500);
    }
count++;
     break;
    }

  }

}

